# Diretório local onde as imagens são salvas
IMAGE_DIR='uploads'

# URL pública onde as imagens são servidas
IMAGE_SERVER_URL='http://localhost:3000/uploads'

# Tamanho máximo permitido para uploads (em kilobytes)
NEXT_PUBLIC_MAX_KBYTES=972800

# Chave secreta para assinar/verificar JWTs
JWT_SECRET_KEY='your_jwt_secret_key_here'

# Tempo de expiração do login em segundos (ex: 86400 = 1 dia)
LOGIN_EXPIRATION_SECONDS=86400

# Tempo de expiração do login em string (usado por bibliotecas que aceitam formato tipo '1d')
LOGIN_EXPIRATION_STRING='1d'

# Nome do cookie de login
LOGIN_COOKIE_NAME='loginSession'

# Nome de usuário autorizado para login (padrão didático)
LOGIN_USER='your_username_here'

# Senha em hash (bcrypt) — por segurança, **não use senhas reais aqui**
LOGIN_PASSWORD='your_bcrypt_hash_here'

# Permitir ou não login via credenciais (.env usado para evitar dependência de banco de dados)
ALLOW_LOGIN=1  # 0 para desativar, 1 para ativar
